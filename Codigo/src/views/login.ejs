<script>
    function findLogin(pickId)
{   
    return this.db.transaction(function(tx){
                   return tx.executeSql("SELECT pid FROM page WHERE pid="+pickId, [], function(tx, result) {
                    if(result) {    
                        if(result.rows.length > 0){
                            return false;                                   
                        }
                        else
                        {
                            return true;
                        }    
                    }
                    else{
                        return false;  
                    }
                })
            })
}
</script>
